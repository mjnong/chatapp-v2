<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatAppV2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_blue</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/terracotta</item>
        <item name="colorSecondaryVariant">@color/sage</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/cream</item>
        <item name="colorSurface">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/deep_blue</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/terracotta</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
